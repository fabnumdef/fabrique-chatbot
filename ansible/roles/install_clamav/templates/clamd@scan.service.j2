[Unit]
Description = clamd scanner (%i) daemon
Documentation = man:clamd(8) man:clamd.conf(5) man:clamav-milter(8)
Requires = freshclam.service
After = syslog.target nss-lookup.target network.target freshclam.service

[Service]
ExecStart = /usr/sbin/clamd -c /etc/clamd.d/{{ instance }}.conf
Restart = on-failure
PrivateTmp = true

[Install]
WantedBy = multi-user.target
